<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ex.droidlist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="22" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme" >
        <activity
            android:name="com.ex.droidlist.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.ex.droidlist.MyViewFipperActivity" />
        <activity
            android:name="com.ex.droidlist.MaterialTabActivity"
            android:label="@string/title_activity_material_tab" />
        <activity
            android:name="com.ex.droidlist.CustomTabsActivity"
            android:label="@string/title_activity_custom_tabs" />
        <activity
            android:name="com.ex.droidlist.TestActivity"
            android:label="@string/title_activity_test" />

        <service
            android:name="com.ex.droidlist.ExampleIntentService"
            android:exported="false" />
        <service android:name="com.ex.droidlist.MyService" />
        <service android:name="com.ex.droidlist.ForegroundService" />

        <activity android:name="com.ex.droidlist.DataBindingActivity" />
    </application>

</manifest>